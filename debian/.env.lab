# PodPlay Environment Configuration - lab.sethlakowske.com (Home Lab)
# This is a home network deployment with port forwarding

# Domain configuration
PODPLAY_DOMAIN=lab.sethlakowske.com
PODPLAY_EMAIL=lakowske@gmail.com

# Port configuration (Home lab uses non-privileged ports)
PODPLAY_HOST_HTTP_PORT=8080
PODPLAY_HOST_HTTPS_PORT=8443
PODPLAY_CONTAINER_HTTP_PORT=80
PODPLAY_CONTAINER_HTTPS_PORT=443

# Certificate configuration
PODPLAY_CERT_TYPE=letsencrypt
PODPLAY_STAGING=false

# DNS configuration
PODPLAY_DNS_FORWARDERS="8.8.8.8; 8.8.4.4; 1.1.1.1; 1.0.0.1"
PODPLAY_DOMAIN_IP=127.0.0.1

# Mail configuration
PODPLAY_MAIL_SERVER_NAME=mail.lab.sethlakowske.com

# Mail ports (Home lab uses alternative ports)
PODPLAY_HOST_SMTP_PORT=2525
PODPLAY_HOST_SUBMISSION_PORT=2587
PODPLAY_HOST_IMAPS_PORT=2993

# Volume names
PODPLAY_CERTS_VOLUME=certs
PODPLAY_LOGS_VOLUME=logs
PODPLAY_USER_DATA_VOLUME=user-data