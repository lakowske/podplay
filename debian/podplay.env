# PodPlay Environment Configuration
# Copy this file to .env and customize for your deployment

# Domain configuration
PODPLAY_DOMAIN=lab.sethlakowske.com
PODPLAY_EMAIL=lakowske@gmail.com

# Certificate configuration
PODPLAY_CERT_TYPE=letsencrypt  # Options: letsencrypt, self-signed
PODPLAY_STAGING=false           # Set to true for Let's Encrypt staging

# DNS configuration
PODPLAY_DNS_FORWARDERS="8.8.8.8; 8.8.4.4; 1.1.1.1; 1.0.0.1"
PODPLAY_DOMAIN_IP=127.0.0.1

# Mail configuration
PODPLAY_MAIL_SERVER_NAME=mail.lab.sethlakowske.com

# Volume names (if different from defaults)
PODPLAY_CERTS_VOLUME=podplay-certs
PODPLAY_LOGS_VOLUME=podplay-logs