# PodPlay Environment Configuration - sethcore.com (VPS)
# This is a VPS deployment with direct port binding

# Domain configuration
PODPLAY_DOMAIN=sethcore.com
PODPLAY_EMAIL=lakowske@gmail.com

# Port configuration (VPS uses standard ports)
PODPLAY_HOST_HTTP_PORT=80
PODPLAY_HOST_HTTPS_PORT=443
PODPLAY_CONTAINER_HTTP_PORT=80
PODPLAY_CONTAINER_HTTPS_PORT=443

# Certificate configuration
PODPLAY_CERT_TYPE=letsencrypt
PODPLAY_STAGING=false

# DNS configuration
PODPLAY_DNS_FORWARDERS="8.8.8.8; 8.8.4.4; 1.1.1.1; 1.0.0.1"
PODPLAY_DOMAIN_IP=127.0.0.1

# Mail configuration
PODPLAY_MAIL_SERVER_NAME=mail.sethcore.com

# Mail ports (VPS uses standard ports)
PODPLAY_HOST_SMTP_PORT=25
PODPLAY_HOST_SUBMISSION_PORT=587
PODPLAY_HOST_IMAPS_PORT=993

# Volume names
PODPLAY_CERTS_VOLUME=certs
PODPLAY_LOGS_VOLUME=logs
PODPLAY_USER_DATA_VOLUME=user-data